<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Starter kit symfony{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/babdevpagerfanta/css/pagerfanta.css') }}">
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="row justify-content-center">
                <div class="col-9">
                    <div class="row">
                        <div class="col-12">
                            {% block header %}
                                {% include 'layout/_header.html.twig' %}
                            {% endblock %}
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-12 mb-5" style="min-height: 7em;">
                                {% block main_content %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-end pe-4">
                            {% block footer %}
                                {% include('layout/_footer.html.twig') %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </body>
</html>

